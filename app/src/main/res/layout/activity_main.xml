<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primary"
    tools:context=".activities.MainActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/background_icon"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_12sdp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagesSignOut"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/background_icon"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_logout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20sdp"
        android:text="Cześć"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="@id/imageProfile"
        app:layout_constraintEnd_toStartOf="@id/imagesSignOut"
        app:layout_constraintStart_toEndOf="@id/imageProfile"
        app:layout_constraintTop_toTopOf="@id/imageProfile"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_center_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="250dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_content_bottom"
        app:layout_constraintTop_toBottomOf="@id/imageProfile"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintHeight_percent="0.30">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Income"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@drawable/item_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Przychody"
                        android:drawableBottom="@drawable/income"
                        android:textColor="@color/primary"
                        android:textAlignment="center"
                        android:textSize="24dp" />
                    <TextView

                        android:id="@+id/EditTextIncomeBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Expense"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@drawable/item_background">

                    <TextView

                        android:layout_width="265dp"
                        android:layout_height="match_parent"
                        android:text="Wydatki"
                        android:paddingBottom="@dimen/_10sdp"
                        android:drawableBottom="@drawable/expense"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="24dp" />
                    <TextView
                        android:id="@+id/EditTextExpenseBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ChartPie"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@drawable/item_background">

                    <TextView
                        android:layout_width="237dp"
                        android:layout_height="match_parent"
                        android:text="Wykres wydatków"
                        android:paddingBottom="@dimen/_12sdp"
                        android:drawableBottom="@drawable/pie"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/EditTextChartBalance"
                        android:layout_width="126dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Goals"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:background="@drawable/item_background">

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:text="Cele"
                        android:drawableBottom="@drawable/goal"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/EditTextGoalsBalance"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="200dp"
                         />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="Ostatni przychód:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/lastIncome"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lastIncomeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="16sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout">
        <TextView
          android:text="Ostatni wydatek:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lastExpense"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lastExpenseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="16sp" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
